@using _4kampf.Web.Services
@using _4kampf.Shared.Models
@using Microsoft.AspNetCore.Components.Forms
@inject ProjectImportExportService ImportExport
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<div class="import-export-dialog @(IsVisible ? "visible" : "")">
    <div class="dialog-overlay" @onclick="Close"></div>
    <div class="dialog-content">
        <div class="dialog-header">
            <h5>Import / Export Project</h5>
            <button class="btn-close" @onclick="Close" type="button">Ã—</button>
        </div>
        
        <div class="dialog-body">
            <div class="import-export-section">
                <h6>Import Project</h6>
                <div class="mb-3">
                    <label class="form-label">Import from .kml file (original format)</label>
                    <InputFile OnChange="OnImportFileSelected" 
                               accept=".kml" 
                               class="form-control" />
                    <small class="form-text text-muted">Select a .kml project file from the original 4kampf application</small>
                </div>
                @if (!string.IsNullOrEmpty(importError))
                {
                    <div class="alert alert-danger">@importError</div>
                }
                @if (!string.IsNullOrEmpty(importSuccess))
                {
                    <div class="alert alert-success">@importSuccess</div>
                }
            </div>
            
            <hr />
            
            <div class="import-export-section">
                <h6>Export Project</h6>
                <div class="mb-3">
                    <label class="form-label">Export to Visual Studio format</label>
                    <p class="text-muted">This will create a .vcxproj file and solution file that can be opened in Visual Studio.</p>
                    <button class="btn btn-primary" @onclick="ExportToVisualStudio" type="button" disabled="@(CurrentProject == null)">
                        Export to Visual Studio
                    </button>
                </div>
                @if (!string.IsNullOrEmpty(exportError))
                {
                    <div class="alert alert-danger">@exportError</div>
                }
                @if (!string.IsNullOrEmpty(exportSuccess))
                {
                    <div class="alert alert-success">@exportSuccess</div>
                }
            </div>
        </div>
        
        <div class="dialog-footer">
            <button class="btn btn-secondary" @onclick="Close" type="button">Close</button>
        </div>
    </div>
</div>

@code {
    [Parameter] public Project? CurrentProject { get; set; }
    [Parameter] public EventCallback<Project> ProjectImported { get; set; }
    [Parameter] public EventCallback<string> OnLog { get; set; }
    
    private bool isVisible = false;
    private string? importError;
    private string? importSuccess;
    private string? exportError;
    private string? exportSuccess;
    
    public bool IsVisible
    {
        get => isVisible;
        set
        {
            if (isVisible != value)
            {
                isVisible = value;
                if (!isVisible)
                {
                    // Reset messages when closing
                    importError = null;
                    importSuccess = null;
                    exportError = null;
                    exportSuccess = null;
                }
            }
        }
    }
    
    public void Show()
    {
        IsVisible = true;
    }
    
    public void Close()
    {
        IsVisible = false;
    }
    
    private async Task OnImportFileSelected(InputFileChangeEventArgs e)
    {
        importError = null;
        importSuccess = null;
        
        try
        {
            if (e.File == null)
            {
                return;
            }
            
            await LogAsync("Reading .kml file...");
            
            // Validate file
            if (e.File.Size == 0)
            {
                importError = "The selected file is empty.";
                await LogAsync("Import failed: Empty file");
                return;
            }
            
            if (e.File.Size > 10 * 1024 * 1024) // 10MB max
            {
                importError = "The selected file is too large (max 10MB).";
                await LogAsync("Import failed: File too large");
                return;
            }
            
            // Read file content
            using var stream = e.File.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);
            using var reader = new StreamReader(stream);
            string kmlContent = await reader.ReadToEndAsync();
            
            if (string.IsNullOrWhiteSpace(kmlContent))
            {
                importError = "The .kml file appears to be empty or could not be read.";
                await LogAsync("Import failed: Empty or unreadable file");
                return;
            }
            
            // Basic XML validation
            if (!kmlContent.TrimStart().StartsWith("<?xml") && !kmlContent.TrimStart().StartsWith("<Project"))
            {
                importError = "The file does not appear to be a valid .kml project file. Expected XML format.";
                await LogAsync("Import failed: Invalid file format");
                return;
            }
            
            // Import project
            await LogAsync("Parsing project settings...");
            var project = await ImportExport.ImportFromKmlAsync(kmlContent);
            
            if (project == null)
            {
                importError = "Failed to import project. The .kml file may be invalid or corrupted. Please check the file format.";
                await LogAsync("Import failed: Invalid .kml file");
                return;
            }
            
            // Try to load shader files if they were uploaded together
            // Note: In a web browser, we can't access the file system, so shaders must be uploaded separately
            // or included in a zip file. For now, we'll use default shaders if not found.
            await LogAsync($"Project '{project.Name}' imported successfully. Using default shaders (shader files not available in browser).");
            
            // Set default shaders if empty
            // Note: Original .kml files don't contain shader code - shaders are stored as separate files
            // In the web version, we'll use default shaders if not provided
            if (string.IsNullOrWhiteSpace(project.FragmentShader))
            {
                project.FragmentShader = @"#version 300 es
precision mediump float;
in vec2 uv;
out vec4 fragColor;
uniform vec3 u; // {resX, resY, time}
void main() {
    fragColor = vec4(uv, 0.5, 1.0);
}";
            }
            if (string.IsNullOrWhiteSpace(project.VertexShader))
            {
                project.VertexShader = @"#version 300 es
in vec2 position;
out vec2 uv;
void main() {
    gl_Position = vec4(position, 0.0, 1.0);
    uv = position * 0.5 + 0.5;
}";
            }
            if (string.IsNullOrWhiteSpace(project.PostProcessShader))
            {
                project.PostProcessShader = @"#version 300 es
precision mediump float;
in vec2 uv;
out vec4 fragColor;
uniform sampler2D tex;
void main() {
    fragColor = texture(tex, uv);
}";
            }
            
            importSuccess = $"Successfully imported project: {project.Name}";
            await LogAsync($"Imported project: {project.Name}");
            
            // Notify parent component (which will save the project)
            if (ProjectImported.HasDelegate)
            {
                await ProjectImported.InvokeAsync(project);
            }
        }
        catch (Exception ex)
        {
            importError = $"Error importing project: {ex.Message}";
            await LogAsync($"Import error: {ex.Message}");
        }
    }
    
    private async Task ExportToVisualStudio()
    {
        if (CurrentProject == null)
        {
            exportError = "No project selected. Please create or open a project first.";
            return;
        }
        
        if (string.IsNullOrWhiteSpace(CurrentProject.Name))
        {
            exportError = "Project name is required for export.";
            return;
        }
        
        exportError = null;
        exportSuccess = null;
        
        try
        {
            await LogAsync("Exporting project to Visual Studio format...");
            
            // Validate project has shaders
            if (string.IsNullOrWhiteSpace(CurrentProject.FragmentShader))
            {
                exportError = "Project must have a fragment shader to export.";
                await LogAsync("Export failed: Missing fragment shader");
                return;
            }
            
            // Generate .vcxproj and .sln content
            string vcxprojContent = GenerateVcxprojContent(CurrentProject);
            string slnContent = GenerateSlnContent(CurrentProject);
            string projectName = SanitizeFileName(CurrentProject.Name);
            
            await LogAsync("Creating project files...");
            
            // Prepare files for zip
            var files = new List<object>
            {
                new { filename = $"basecode/{projectName}.vcxproj", content = vcxprojContent },
                new { filename = $"basecode/{projectName}.sln", content = slnContent },
                new { filename = "frag.glsl", content = CurrentProject.FragmentShader },
                new { filename = "vert.glsl", content = CurrentProject.VertexShader ?? "" }
            };
            
            // Add post-process shader if present
            if (!string.IsNullOrWhiteSpace(CurrentProject.PostProcessShader))
            {
                files.Add(new { filename = "ppfrag.glsl", content = CurrentProject.PostProcessShader });
            }
            
            await LogAsync("Creating zip archive...");
            
            // Create and download zip file
            await JSRuntime.InvokeVoidAsync("downloadZip", 
                $"{projectName}.zip", 
                files.ToArray());
            
            exportSuccess = $"Project '{CurrentProject.Name}' exported successfully as {projectName}.zip";
            await LogAsync($"Project exported to Visual Studio format: {projectName}.zip");
        }
        catch (Exception ex)
        {
            exportError = $"Error exporting project: {ex.Message}";
            await LogAsync($"Export error: {ex.Message}");
        }
    }
    
    private string GenerateVcxprojContent(Project project)
