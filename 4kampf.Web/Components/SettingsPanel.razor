@using _4kampf.Web.Services
@inject SointuService Sointu
@rendermode InteractiveServer

<div class="settings-panel @(IsVisible ? "visible" : "")">
    <div class="settings-header">
        <h5>Settings</h5>
        <button class="btn-close" @onclick="Toggle">×</button>
    </div>
    
    <div class="settings-content">
        <div class="settings-section">
            <h6>Rendering</h6>
            <div class="setting-item">
                <label>
                    <input type="checkbox" checked="@EnableStandardUniforms" @onchange="OnStandardUniformsChanged" />
                    Enable Standard Uniforms
                </label>
                <span class="setting-hint">vec3 u {resX, resY, time}</span>
            </div>
            <div class="setting-item">
                <label>
                    <input type="checkbox" checked="@EnableCamControls" @onchange="OnCamControlsChanged" />
                    Enable Camera Controls
                </label>
                <span class="setting-hint">WASD + Mouse look</span>
            </div>
            <div class="setting-item">
                <label>
                    <input type="checkbox" checked="@EnableEnvelopeSync" @onchange="OnEnvelopeSyncChanged" />
                    Enable Envelope Sync
                </label>
                <span class="setting-hint">float ev[MAX_INSTRUMENTS]</span>
            </div>
        </div>
        
        <div class="settings-section">
            <h6>Music Synthesis</h6>
            <div class="setting-item">
                <label>Synthesizer:</label>
                <select value="@SelectedSynth" @onchange="OnSynthChanged" class="form-select form-select-sm">
                    <option value="sointu">Sointu (Cross-platform)</option>
                    <option value="4klang">4klang (Windows only)</option>
                    <option value="clinkster">Clinkster (Windows only)</option>
                    <option value="oidos">Oidos (Windows only)</option>
                </select>
            </div>
            <div class="setting-item">
                <label>
                    <input type="checkbox" checked="@UseWasmRendering" @onchange="OnWasmRenderingChanged" />
                    Use WebAssembly Rendering
                </label>
                <span class="setting-hint">Client-side real-time synthesis (requires WASM module)</span>
            </div>
            <div class="setting-item">
                <div class="status-indicator">
                    <span class="status-label">Sointu Status:</span>
                    @if (Sointu.IsAvailable)
                    {
                        <span class="status-badge status-success">✓ Available</span>
                    }
                    else
                    {
                        <span class="status-badge status-error">✗ Not Available</span>
                        <a href="/README_SOINTU.md" target="_blank" class="status-help">Install</a>
                    }
                </div>
            </div>
        </div>
        
        <div class="settings-section">
            <h6>Shaders</h6>
            <div class="setting-item">
                <label>
                    <input type="checkbox" checked="@UsePostProcess" @onchange="OnPostProcessChanged" />
                    Use Post-Process Shader
                </label>
            </div>
            <div class="setting-item">
                <label>
                    <input type="checkbox" checked="@UseVertexShader" @onchange="OnVertexShaderChanged" />
                    Use Custom Vertex Shader
                </label>
            </div>
        </div>
        
        <div class="settings-section">
            <h6>Playback</h6>
            <div class="setting-item">
                <label>
                    <input type="checkbox" checked="@EnableLooping" @onchange="OnLoopingChanged" />
                    Loop Music
                </label>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public bool IsVisible { get; set; } = false;
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public bool EnableStandardUniforms { get; set; } = true;
    [Parameter] public EventCallback<bool> EnableStandardUniformsChanged { get; set; }
    [Parameter] public bool EnableCamControls { get; set; } = true;
    [Parameter] public EventCallback<bool> EnableCamControlsChanged { get; set; }
    [Parameter] public bool EnableEnvelopeSync { get; set; } = false;
    [Parameter] public EventCallback<bool> EnableEnvelopeSyncChanged { get; set; }
    [Parameter] public string SelectedSynth { get; set; } = "sointu";
    [Parameter] public EventCallback<string> SelectedSynthChanged { get; set; }
    [Parameter] public bool UsePostProcess { get; set; } = true;
    [Parameter] public EventCallback<bool> UsePostProcessChanged { get; set; }
    [Parameter] public bool UseVertexShader { get; set; } = true;
    [Parameter] public EventCallback<bool> UseVertexShaderChanged { get; set; }
    [Parameter] public bool EnableLooping { get; set; } = false;
    [Parameter] public EventCallback<bool> EnableLoopingChanged { get; set; }
    [Parameter] public bool UseWasmRendering { get; set; } = false;
    [Parameter] public EventCallback<bool> UseWasmRenderingChanged { get; set; }
    
    private void Toggle()
    {
        IsVisible = !IsVisible;
        IsVisibleChanged.InvokeAsync(IsVisible);
    }
    
    // Event handlers that invoke the Changed callbacks for @bind support
    private async Task OnStandardUniformsChanged(ChangeEventArgs e)
    {
        if (bool.TryParse(e.Value?.ToString(), out bool value))
        {
            EnableStandardUniforms = value;
            await EnableStandardUniformsChanged.InvokeAsync(value);
        }
    }
    
    private async Task OnCamControlsChanged(ChangeEventArgs e)
    {
        if (bool.TryParse(e.Value?.ToString(), out bool value))
        {
            EnableCamControls = value;
            await EnableCamControlsChanged.InvokeAsync(value);
        }
    }
    
    private async Task OnEnvelopeSyncChanged(ChangeEventArgs e)
    {
        if (bool.TryParse(e.Value?.ToString(), out bool value))
        {
            EnableEnvelopeSync = value;
            await EnableEnvelopeSyncChanged.InvokeAsync(value);
        }
    }
    
    private async Task OnSynthChanged(ChangeEventArgs e)
    {
        SelectedSynth = e.Value?.ToString() ?? "sointu";
        await SelectedSynthChanged.InvokeAsync(SelectedSynth);
    }
    
    private async Task OnPostProcessChanged(ChangeEventArgs e)
    {
        if (bool.TryParse(e.Value?.ToString(), out bool value))
        {
            UsePostProcess = value;
            await UsePostProcessChanged.InvokeAsync(value);
        }
    }
    
    private async Task OnVertexShaderChanged(ChangeEventArgs e)
    {
        if (bool.TryParse(e.Value?.ToString(), out bool value))
        {
            UseVertexShader = value;
            await UseVertexShaderChanged.InvokeAsync(value);
        }
    }
    
    private async Task OnLoopingChanged(ChangeEventArgs e)
    {
        if (bool.TryParse(e.Value?.ToString(), out bool value))
        {
            EnableLooping = value;
            await EnableLoopingChanged.InvokeAsync(value);
        }
    }
    
    private async Task OnWasmRenderingChanged(ChangeEventArgs e)
    {
        if (bool.TryParse(e.Value?.ToString(), out bool value))
        {
            UseWasmRendering = value;
            await UseWasmRenderingChanged.InvokeAsync(value);
        }
    }
}

