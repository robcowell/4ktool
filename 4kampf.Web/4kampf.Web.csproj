<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>_4kampf.Web</RootNamespace>
    <AssemblyName>$(AssemblyName.Replace(' ', '_'))</AssemblyName>
    <BlazorDisableThrowNavigationException>true</BlazorDisableThrowNavigationException>
    <!-- Heroku/Production optimizations -->
    <PublishReadyToRun>true</PublishReadyToRun>
    <PublishTrimmed>false</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
    <!-- Ensure wwwroot is included in publish -->
    <Content Include="wwwroot/**" />
  </ItemGroup>

  <ItemGroup>
    <!-- AWS SDK for S3 storage support -->
    <PackageReference Include="AWSSDK.S3" Version="3.7.400.47" />
    <PackageReference Include="AWSSDK.Extensions.NETCore.Setup" Version="3.7.300" />
  </ItemGroup>

  <ItemGroup>
    <!-- Reference shared library -->
    <ProjectReference Include="..\4kampf.Shared\4kampf.Shared.csproj" />
  </ItemGroup>

</Project>
